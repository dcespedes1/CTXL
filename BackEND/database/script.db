CREATE TABLE Usuario (
    id_Usuario INT PRIMARY KEY AUTO_INCREMENT NOT NULL,
    Nombre VARCHAR(28) NOT NULL,
    FechaNacimiento VARCHAR(20) NOT NULL,
    TipoDoc VARCHAR(30) NOT NULL,
    NumeroDoc VARCHAR(28) NOT NULL,
    Correo VARCHAR(28) NOT NULL,
    celular VARCHAR(30) NOT NULL,
    Contraseña VARCHAR(100)  NOT NULL,
    rol VARCHAR(30) NOT NULL
);


CREATE TABLE pedidos (
    id_Pedido INT PRIMARY KEY AUTO_INCREMENT NOT NULL,
    Cliente VARCHAR(30) NOT NULL,
    Cantidad VARCHAR(30) NOT NULL,
    Empleado VARCHAR(30) NOT NULL,
    Prenda VARCHAR(30) NOT NULL,
    Tela VARCHAR(30) NOT NULL,
    Estampado VARCHAR(30) NOT NULL,
    Talla VARCHAR(30) NOT NULL,
    Bordado VARCHAR(30) NOT NULL,
    PInicial INT NOT NULL,
    PFinal INT NOT NULL,
    id_Usuario INT NOT NULL,
    FOREIGN KEY (id_Usuario) REFERENCES Administrador(id_Usuario)
);

CREATE TABLE Productos (
    id_producto INT PRIMARY KEY AUTO_INCREMENT NOT NULL,
    CantidadR INT NOT NULL,
    Material VARCHAR(30) NOT NULL,
    Colores VARCHAR(30) NOT NULL,
    id_Usuario INT NOT NULL,
    FOREIGN KEY (id_Usuario) REFERENCES Administrador(id_Usuario)
);

